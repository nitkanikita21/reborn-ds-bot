{
    "compilerOptions": {
        "target": "ES2016",
        "module": "CommonJS",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "./src/",
        "outDir": "./build",

        "skipLibCheck": true,

        "useUnknownInCatchVariables": false,

    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}